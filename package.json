{
  "name": "inventory-manager",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "Ahmed yassine zeraibi",
    "github": "aceiny",
    "email": "aceiny.dev@gmail.com"
  },
  "scripts": {
    "build": "next build",
    "export": "next export",
    "dev": "next dev --turbopack",
    "lint": "next lint",
    "start": "next start",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev --turbopack\" \"electron .\"",
    "electron-build": "next build && electron-builder",
    "dist": "npm run build && npm run export && electron-builder --publish=never"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-accordion": "1.2.2",
